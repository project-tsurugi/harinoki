<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
    <listener>
        <listener-class>com.tsurugidb.harinoki.ConfigurationHandler</listener-class>
    </listener>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>harinoki</realm-name>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>token issuer</web-resource-name>
            <url-pattern>/issue</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>harinoki-user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>harinoki-user</role-name>
    </security-role>
    <error-page>
        <error-code>401</error-code>
        <location>/unauthorized</location>
    </error-page>
    <servlet>
        <servlet-name>issue</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.IssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>issue</servlet-name>
        <url-pattern>/issue</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>issue-encrypted</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.IssueEncryptedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>issue-encrypted</servlet-name>
        <url-pattern>/issue-encrypted</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>refresh</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.RefreshServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refresh</servlet-name>
        <url-pattern>/refresh</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.VerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>encryption-key</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.EncryptionKeyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>encryption-key</servlet-name>
        <url-pattern>/encryption-key</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>unauthorized</servlet-name>
        <servlet-class>com.tsurugidb.harinoki.UnauthorizedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>unauthorized</servlet-name>
        <url-pattern>/unauthorized</url-pattern>
    </servlet-mapping>
    <env-entry>
        <env-entry-name>TSURUGI_JWT_CLAIM_ISS</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>authentication-manager</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>TSURUGI_JWT_CLAIM_AUD</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>metadata-manager</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>TSURUGI_JWT_SECRET_KEY</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>tsurugi.pem</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>TSURUGI_TOKEN_EXPIRATION</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>300seconds</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>TSURUGI_TOKEN_EXPIRATION_REFRESH</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>24hours</env-entry-value>
    </env-entry>
</web-app>
